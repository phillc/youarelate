<% form_for([@user, @person], :url => person_path(@user, @person)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <h3>Data Points</h3>
    <% f.fields_for :data_points do |data_point_form| %>
      <%= render :partial => 'data_point', :locals => { :f => data_point_form } %>
    <% end %>
    <p><%= add_child_link "New Data Point", f, :data_points %></p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
  
<% end %>
