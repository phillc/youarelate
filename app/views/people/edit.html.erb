<h1>Editing <%= "#{@person.name}" %> </h1>

<% form_for([@user, @person], :url => person_path(@user, @person)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>

<% end %>

<% form_for(@data_point, :url => dashboard_path(current_user)) do |f| %>
  <h2> Add Data Point </h2>
  <p>
    <%= f.label :expected_time %><br />
    <%= f.text_field :expected_time %>
  </p>
  <p>
    <%= f.label :actual_time %><br />
    <%= f.text_field :actual_time %>
  </p>
  <p>
    <%= f.submit 'Add' %>
  </p>
<% end %>

<%= link_to 'Back', dashboard_path(current_user) %>
