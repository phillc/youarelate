<% title "New person" %>

<% form_for @person do |f| %>
  <%= f.error_messages %>
  <dl>
    <dt><%= f.label :name %></dt>
    <dd><%= f.text_field :name %></dd>
    <dt><%= f.label :notes %></dt>
    <dd><%= f.text_area :notes %></dd>
  </dl>

  <h2>Data Points</h2>
  <div id="dvdatacontainer">
    <% f.fields_for :data_points do |data_point_form| %>
      <%= render :partial => 'data_point', :locals => { :f => data_point_form } %>
    <% end %>
    <p><%= add_child_link image_tag("icons/plus.png", :alt => "Add a data point"), f, :data_points %></p>
  </div>

  <span id="spsavebutton"><%= f.submit "Add Friend" %></span>
<% end %>
